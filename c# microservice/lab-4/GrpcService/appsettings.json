{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http2"
    }
  },

  "DatabaseOptions": {
    "ConnectionString": "Host=localhost;Port=5433;Database=orderDB;Username=postgres;Password=postgres"
  },

  "Kafka": {
    "BootstrapServers": "localhost:8001",
    "OrderCreationTopic": "order_creation",
    "OrderProcessingTopic": "order_processing",
    "GroupId": "order-service-consumer-group",
    "BatchSize": 100
  }
}
